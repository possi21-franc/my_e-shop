<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>



    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background: #0d6efd;
            color: #fff;
            transition: all 0.3s;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar .sidebar-header {
            padding: 1rem;
            font-size: 1.25rem;
            font-weight: bold;
            text-align: center;
            background: #0b5ed7;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #fff;
            text-decoration: none;
            transition: background 0.2s;
        }

        .sidebar a:hover {
            background: #0b5ed7;
        }

        .sidebar a i {
            margin-right: 10px;
            font-size: 1.2rem;
        }

        /* Content */
        .content {
            margin-left: 250px;
            padding: 2rem;
            transition: margin-left 0.3s;
        }

      /* Masquée par défaut sur mobile */
@media (max-width: 768px) {
    .sidebar {
        left: -250px; /* Hors écran */
    }

    .sidebar.active {
        left: 0; /* Apparaît quand active */
    }

    #sidebarToggle {
        display: inline-block;
        position: fixed;
        top: 15px;
        left: 15px;
        z-index: 1101; /* Au-dessus de la sidebar */
        background: #0d6efd;
        border: none;
        color: #fff;
        padding: 0.5rem 0.75rem;
        border-radius: 4px;
    }
}

/* Contenu principal reste inchangé */
.content {
    margin-left: 250px; /* Desktop */
    padding: 2rem;
}

/* Sur mobile, margin-left = 0 */
@media (max-width: 768px) {
    .content {
        margin-left: 0;
    }
}
    </style>
</head>
<body>

    {# Sidebar #}
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            ADMIN PANEL
        </div>
        <a href="{{ path('app_home') }}"><i class="bi bi-shop"></i> Accueil</a>
        <a href="{{ path('admin_dashboard') }}"><i class="bi bi-house"></i> Dashboard</a>
        <a href="{{ path('app_category') }}"><i class="bi bi-list-ul"></i> Catégories</a>
        <a href="{{ path('app_sub_category_index') }}"><i class="bi bi-tags-fill"></i> Sous-catégories</a>
        <a href="{{ path('app_product_index') }}"><i class="bi bi-box-seam"></i> Produits</a>
        <a href="{{ path('app_city_index') }}"><i class="bi bi-geo-alt"></i> Villes</a>
        <a href="{{ path('app_order_show') }}"><i class="bi bi-bag-check"></i> Commandes</a>
        <a href="{{ path('app_user') }}"><i class="bi bi-people-fill"></i> Utilisateurs</a>
        <a href="{{ path('app_logout') }}">  <i class="bi bi-box-arrow-right fs-5"></i> Se déconnecter</a>
    </div>

    {# Toggle button pour mobile #}
<button id="sidebarToggle">☰</button>


    {# Contenu principal #}
    <div class="content">
        {% block body %}{% endblock %}
    </div>

    {# Bootstrap JS et Popper #}

    <script>
      const sidebarToggle = document.getElementById('sidebarToggle');
const sidebar = document.getElementById('sidebar');

sidebarToggle.addEventListener('click', () => {
    sidebar.classList.toggle('active');
});


    </script>

</body>
</html>
