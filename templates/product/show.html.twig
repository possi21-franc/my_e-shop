{% extends 'base_admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container mt-4">
  <h1 class="mb-4 text-center">Détails du produit</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
          <h5 class="card-title text-primary mb-3">{{ product.name }}</h5>
          
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>ID :</strong> {{ product.id }}
            </li>
            <li class="list-group-item">
              <strong>Description :</strong> {{ product.desciption }}
            </li>
            <li class="list-group-item">
              <strong>Prix :</strong> {{ product.price }} €
            </li>
            <li class="list-group-item">
              <strong>Stock :</strong> {{ product.stock }} 
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex flex-wrap justify-content-center gap-2 mt-4">
      <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Retour à la liste
      </a>
      <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Modifier
      </a>
      <a href="{{ path('app_product_stock_history', {'id': product.id}) }}" class="btn btn-info text-white">
        <i class="bi bi-clock-history"></i> Historique du stock
      </a>
      {{ include('product/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
  </div>
</div>
{% endblock %}
