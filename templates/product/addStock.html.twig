{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter du stock{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            {% include 'layout/flash_message.html.twig' %}

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Ajouter du stock pour : {{ product.name }}</h4>
                </div>
                <div class="card-body">
                    {# Formulaire #}
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label class="form-label">Quantit√©</label>
                            {{ form_widget(form.qte, {attr:{'class': 'form-control'}}) }}
                            {{ form_errors(form.qte) }}
                        </div>

                        <button class="btn btn-outline-primary btn-block w-100">{{ button_label|default('Ajouter') }}</button>
                    {{ form_end(form) }}

                    <div class="mt-3">
                        <a href="{{ path('app_product_index', {'id': product.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Retour au produit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
