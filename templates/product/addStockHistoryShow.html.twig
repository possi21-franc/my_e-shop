{% extends 'base_admin.html.twig' %}

{% block title %}Historique du stock{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            
            {% include 'layout/flash_message.html.twig' %}

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i>Historique des ajouts de stock</h4>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Retour au produit
                    </a>
                </div>
                <div class="card-body">
                    {% if productsAdded|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Quantité Ajoutée</th>
                                        <th>Date d'ajout</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for productAdded in productsAdded %}
                                        <tr>
                                            <td>{{ productAdded.id }}</td>
                                            <td>{{ productAdded.qte }}</td>
                                            <td>{{ productAdded.createdAt|date('d-m-Y H:i:s') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-center text-muted mb-0">Aucun ajout de stock pour ce produit.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
