        <div class="cart position-relative mx-2">
          <a href="{{ path('app_cart') }}" class="cart-link">
            <i class="bi bi-cart"></i>
            {% if cart_count > 0 %}
              <span class="cart-badge">{{ cart_count }}</span>
            {% endif %}
