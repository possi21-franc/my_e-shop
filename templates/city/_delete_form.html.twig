<form method="post" action="{{ path('app_city_delete', {'id': city.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
    <button type="submit" class="btn btn-danger btn-md d-flex align-items-center gap-1">
        <i class="bi bi-trash3"></i>
        Supprimer
    </button>
</form>
