<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 ">
            <div class="ca">
                <div class="card-body p-4">
                    

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.name, 'Nom de la ville', {
                                'label_attr': {'class': 'form-label fw-semibold'}
                            }) }}
                            {{ form_widget(form.name, {
                                'attr': {'class': 'form-control rounded-3 p-3'}
                            }) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.shippingCost, 'Frais de livraison', {
                                'label_attr': {'class': 'form-label fw-semibold'}
                            }) }}
                            {{ form_widget(form.shippingCost, {
                                'attr': {'class': 'form-control rounded-3 p-3'}
                            }) }}
                            {{ form_errors(form.shippingCost) }}
                        </div>

                        <button class="btn btn-primary w-100 py-2 rounded-3 shadow-sm">
                            <i class="bi bi-check-circle me-2"></i>
                            {{ button_label|default('Enregistrer') }}
                        </button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
