<div class="container my-5">
    <div class="row justify-content-center">
        <div class=" col-md-10">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        {{ button_label|default('Ajouter une sous-catégorie') }}
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label class="form-label mb-1">Nom de la sous-catégorie</label>
                            {{ form_widget(form.name, {attr:{'class':'form-control', 'placeholder':'Nom de la sous-catégorie'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label mb-1">Catégorie associée</label>
                            {{ form_widget(form.category, {attr:{'class':'form-select'}}) }}
                            {{ form_errors(form.category) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle me-1"></i>
                            {{ button_label|default('Enregistrer') }}
                        </button>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>
</div>
