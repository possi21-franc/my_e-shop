{% extends 'base_admin.html.twig' %}

{% block title %}Sous-catégorie{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-card-list me-2"></i>Détails de la sous-catégorie
                    </h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-3">
                        <tbody>
                            <tr>
                                <th scope="row">Id</th>
                                <td>{{ sub_category.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Nom</th>
                                <td>{{ sub_category.name }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex flex-wrap gap-2 mt-3">
                        <a class="btn btn-outline-secondary" href="{{ path('app_sub_category_index') }}">
                            <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
                        </a>

                        <a class="btn btn-outline-success" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">
                            <i class="bi bi-pencil-square me-1"></i> Modifier
                        </a>

                        <div class="ms-auto">
                            {{ include('sub_category/_delete_form.html.twig') }}
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
