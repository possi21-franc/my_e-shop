{% extends 'base_admin.html.twig' %}

{% block title %}Sous-catégories{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">

            {% include 'layout/flash_message.html.twig'%}

            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                <h2 class="text-center mb-0">Sous-catégories</h2>
                <a href="{{ path('app_sub_category_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Nouvelle sous-catégorie
                </a>
            </div>

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-0">
                    {% if sub_categories|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Catégorie</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for sub_category in sub_categories %}
                                        <tr>
                                            <td>{{ sub_category.id }}</td>
                                            <td>{{ sub_category.name }}</td>
                                            <td>{{ sub_category.category.name }}</td>
                                            <td class="d-flex gap-2 flex-wrap">
                                                <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="btn btn-outline-success btn-sm">
                                                    <i class="bi bi-eye me-1"></i> Voir
                                                </a>
                                                <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-pencil-square me-1"></i> Modifier
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-center text-muted p-3 mb-0">Aucune sous-catégorie trouvée.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
